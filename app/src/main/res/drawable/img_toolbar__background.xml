    </shape>
</item>

<item android:left="8dp"
    android:right="8dp"
    android:top="8dp"
    android:bottom="5dp">
     <shape android:shape="rectangle">
        <stroke android:width="1dp"
            android:color="@color/gray_30"/>
        <corners android:radius="30dp"/>
    </shape>
</item>
</layer-list>




