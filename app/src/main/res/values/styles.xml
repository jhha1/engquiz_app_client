<resources>

    <!-- Base application theme.
    Theme.AppCompat.NoActionBar: 툴바를 v7.widget.Toolbar로 사용하려면 기존버전의 액션바 안사용설정
    -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Intro" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- 툴바  -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--툴바 옵션열면,,,옵션 내 텍스트 색 -->
        <item name="android:textColor">#0000ff</item>
        <!-- 툴바 버튼?(옵션,드로어열기) 색 -->
        <item name="colorControlNormal">#CBCBCB</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textForQuizPlaying">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#CBCBCB</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>





    <style name="MyFragment">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--
        # 리스트뷰 line color: row간 간격 벌리고 그 틈에 색을 입힘.
          android:dividerHeight - row간격. android:divider - 간격 틈 색
        # 리스트뷰 text color: content_textstyle_listview.xml
   -->
    <style name="MyListView">
        <item name="android:divider">#bbbbbb</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyListViewText">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="MyEditListView" parent="MyListView">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="MyEditListViewItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="MyEditListViewText">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="MyListViewTextIcon">
        <item name="android:layout_width">32sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">Num</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <!--
        Navigation View
        listDivider, textColorSecondary: menu의 분리선 색상.
        다른 값들은 style로 가져와 셋팅하면, 정상동작안해서 직접 navigation view에 셋팅.
    -->
   <style name="MyNavigationView" >
       <item name="android:listDivider">@color/lite_gray</item>
       <item name="android:textColorSecondary">@color/lite_gray</item>
   </style>








    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">20dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

   <!-- Navigation Drawer -->
    <!-- Text -->
    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body1.White"/>
    <style name="Body2.White"/>
    <style name="Body2.Black"/>

    <style name="Body1.White.Primary">
        <item name="android:textColor">@color/text_white_primary</item>
    </style>

    <style name="Body2.White.Primary">
        <item name="android:textColor">@color/text_white_primary</item>
    </style>

</resources>
