<?xml version="1.0" encoding="utf-8"?>
<!--
       kr.jhha.engquiz.presenter_view.MyToolbarar
       android:background = 툴바에 배경 이미지 넣기
       app:contentInsetEnd="0dp"  배경 이미지 넣을때 같이 긁어온 설정.
       app:contentInsetStart="0dp"
        app:elevation="0dp" : shadow 제거
   -->
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:titleTextAppearance="@style/MyText.Toolbar" />

    <ImageView
        android:id="@+id/toolbar_round_layout"
        android:padding = "0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_toolbar__background"/>

</android.support.design.widget.AppBarLayout>