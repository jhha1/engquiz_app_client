<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".view.fragments.playlist.PlayList">

    <!--
    playlist view
    -->
    <ListView
        android:id="@+id/playlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:background="@color/colorTextWhite"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <!--
    show detail / set for playing buttons
    -->
    <LinearLayout
        android:id="@+id/playlist_selected_item_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/playlist_show_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="상새 내용 보기"/>

        <Button
            android:id="@+id/playlist_set_for_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="게임플레이용으로 설정"/>

        </LinearLayout>

</LinearLayout>
