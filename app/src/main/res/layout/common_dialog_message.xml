<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dip"
    android:paddingBottom="12dip"
    android:paddingLeft="14dip"
    android:paddingRight="10dip"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <View android:id="@+id/titleDivider"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/gray_30" />

    <TextView android:id="@+id/message"
        style="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <LinearLayout android:id="@+id/customPanel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>



    <!--
        Buttons
         - android:visibility="gone": 버튼 없애기. 어떤 버튼이 보일지 모르므로 모두 없앤 상태로 시작.
                                    : visible로 상태를 바꾸면, 다시 보임


    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mydialog_button_cancel"
            style="@style/MyButton.Small"
            android:text="Cancel"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"/>
        <Button
            android:id="@+id/mydialog_button_neutral"
            style="@style/MyButton.Small"
            android:text="Neutral"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"/>
        <Button
            android:id="@+id/mydialog_button_ok"
            style="@style/MyButton.Small"
            android:text="OK"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
