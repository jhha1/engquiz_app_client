<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:scrollbarStyle="outsideOverlay"
    android:windowSoftInputMode="adjustResize">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText style="@style/MyText.EditText.MultiLine"
        android:id="@+id/report_modify__edit_ko" />

    <EditText style="@style/MyText.EditText.MultiLine"
        android:layout_marginTop="10dp"
        android:id="@+id/report_modify__edit_en" />

    <!-- complate button  -->
    <Button
        android:id="@+id/report_modify__update_btn"
        style="@style/MyButton.Small"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/sentence__edit_btn"
        android:textSize="16sp"
        android:textColor="@color/gray_30"/>

    <Button
        android:id="@+id/report_modify__show_extra_edit_btn"
        style="@style/MyButton.Small"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:text="SHOW EDIT MORE"
        android:textSize="16sp"
        android:textColor="@color/gray_30"/>

    <Button
        android:id="@+id/report_modify__del_btn"
        style="@style/MyButton.Small"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="48dp"
        android:text="DEL"
        android:textSize="16sp"
        android:textColor="@color/gray_30"/>

    <LinearLayout
        android:id="@+id/report_modify__extra_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText style="@style/MyText.EditText.MultiLine"
            android:id="@+id/report_sentence_extra_edit_ko" />

        <EditText style="@style/MyText.EditText.MultiLine"
            android:layout_marginTop="10dp"
            android:id="@+id/report_sentence_extra_edit_en" />

        <Button
            android:id="@+id/report_modify__complete_extra_edit_btn"
            style="@style/MyButton.Small"
            android:layout_marginTop="8dp"
            android:layout_height="48dp"
            android:text="ADD"
            android:textSize="16sp"
            android:textColor="@color/gray_30"/>

        <Button
            android:id="@+id/report_modify__close_btn"
            style="@style/MyButton.Small"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_height="48dp"
            android:text="Close"
            android:textSize="16sp"
            android:textColor="@color/gray_30"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>