<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".quizgroup.detail.ShowQuizGroupDetail">

    <!-- explain how to use -->
    <TextView
        android:id="@+id/playlist_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="My Quiz Title"
        android:textColor="@color/colorTextDark"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <!-- my playlists : listview
         # 리스트뷰 line color: row간 간격 벌리고 그 틈에 색을 입힘.
                             android:dividerHeight - row간격. android:divider - 간격 틈 색
         # 리스트뷰 text color: content_textstyle_listview.xml
    -->
    <ListView
        android:id="@+id/playlist_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:dividerHeight="0.5dp"
        android:paddingBottom="16dp"
        android:layout_weight="20"/>

</LinearLayout>